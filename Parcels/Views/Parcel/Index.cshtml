@using Parcels.Models;

<h1>Parcels to Ship</h1>

@if (Model.Count == 0)
{
  <p>There are no parcels to ship.</p>
}
<ul>
  @foreach (Parcel parcel in Model)
  {
    <li>@parcel.CostToShip()</li>

  }
</ul>
<a href="/parcel/new">Add a new parcel.</a>

<form action="/parcel/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
